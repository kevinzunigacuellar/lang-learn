---
export interface Props {
  placeholderText: string;
}

const { placeholderText } = Astro.props;
---

<input type="text" placeholder={placeholderText} />

<style>
  input {
    width: 90%;
    height: 75%;
    margin-bottom: 9px;
    margin-left: 2.5%;
    padding: 15px;
    font-size: 16px;
    border-width: 1px;
    border-color: #cccccc;
    background-color: #ffffff;
    color: #000000;
    border-style: solid;
    border-radius: 6px;
    box-shadow: 0px 0px 5px rgba(66, 66, 66, 0.75);
    float: left;
  }
</style>
